var app = angular.module('app', ['ui.router', 'ngResource', 'ngAnimate']);


app.config(['$stateProvider', '$urlRouterProvider', function($stateProvider, $urlRouterProvider) {

    $urlRouterProvider.otherwise("/");

    $stateProvider
      .state('/', {
        url        : '/'
      })
      .state('design', {
        url        : '/design',
        templateUrl: "<%= asset_path 'templates/designIndex.html' %>",
        controller : 'DesignCtrl'
      })
      .state('tech', {
        url        : '/tech',
        templateUrl: "<%= asset_path 'templates/techIndex.html' %>",
        controller : 'TechCtrl'
      }) 
      .state('food', {
        url        : '/food',
        templateUrl: "<%= asset_path 'templates/foodIndex.html' %>",
        controller : 'FoodCtrl'
      }) 
      .state('travel', {
        url        : '/travel',
        templateUrl: "<%= asset_path 'templates/travelIndex.html' %>",
        controller : 'TravelCtrl'
      })
      .state("foo", {
        url: "/foo",
        template: '<h1>foo</h1>'
      })
      .state("bar", {
          url: "/bar",
          template: '<h1>bar</h1>'
      })
  }]);




    

